{
  "name": "blossom-client-sdk",
  "version": "4.1.0",
  "description": "Client SDK for talking to blossom servers",
  "type": "module",
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "author": "hzrd149",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "prepublish": "npm run build",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "format": "prettier -w .",
    "docs": "typedoc src/index.ts"
  },
  "files": [
    "lib",
    "src"
  ],
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "types": "./lib/index.d.ts"
    },
    "./client": {
      "import": "./lib/client.js",
      "types": "./lib/client.d.ts"
    },
    "./image": {
      "import": "./lib/image.js",
      "types": "./lib/image.d.ts"
    },
    "./helpers": {
      "import": "./lib/helpers/index.js",
      "types": "./lib/helpers/index.d.ts"
    },
    "./helpers/*": {
      "import": "./lib/helpers/*.js",
      "types": "./lib/helpers/*.d.ts"
    },
    "./nostr": {
      "import": "./lib/nostr.js",
      "types": "./lib/nostr.d.ts"
    },
    "./auth": {
      "import": "./lib/auth.js",
      "types": "./lib/auth.d.ts"
    },
    "./actions": {
      "import": "./lib/actions.js",
      "types": "./lib/actions.d.ts"
    },
    "./actions/*": {
      "import": "./lib/actions/*.js",
      "types": "./lib/actions/*.d.ts"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@cashu/cashu-ts": "^2.4.3",
    "@noble/hashes": "^1.8.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.3",
    "@testing-library/dom": "^10.4.0",
    "@types/node": "^22.15.14",
    "@vitest/browser": "^3.1.3",
    "@vitest/coverage-v8": "^3.1.3",
    "nostr-tools": "^2.12.0",
    "playwright": "^1.52.0",
    "prettier": "^3.5.3",
    "typedoc": "^0.25.13",
    "typedoc-plugin-mermaid": "^1.12.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3",
    "vitest-fetch-mock": "^0.4.5"
  },
  "packageManager": "pnpm@10.10.0"
}
